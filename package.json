{
  "name": "syncr-monorepo",
  "private": true,
  "version": "0.1.0",
  "description": "Monorepo for Syncr - multi-channel state synchronization library for React, Angular, Vue, Svelte and more.",
  "license": "MIT",
  "packageManager": "pnpm@9.0.0",

  "scripts": {
    "build": "pnpm -r --filter ./packages/* run build",
    "dev": "pnpm -r --filter ./packages/* run dev",
    "test": "pnpm -r --filter ./packages/* run test",
    "lint": "pnpm -r --filter ./packages/* run lint",
    "typecheck": "pnpm -r --filter ./packages/* run typecheck",
    "release": "semantic-release"
  },

  "devDependencies": {
    "typescript": "^5.6.3",
    "vitest": "^2.1.3",
    "@types/node": "^20.11.30",
    "packageManager": "pnpm@9.0.0",

    "eslint": "^9.7.0",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",

    "tsup": "^8.0.1",

    "semantic-release": "^24.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/release-notes-generator": "^12.0.0",
    "@semantic-release/commit-analyzer": "^12.0.0"
  },

  "pnpm": {
    "packages": {
      "packages/*": {}
    }
  },

  "keywords": [
    "state-management",
    "state-sync",
    "react",
    "angular",
    "vue",
    "svelte",
    "frontend",
    "sync",
    "localstorage",
    "broadcastchannel",
    "url-state",
    "encrypted-storage"
  ],

  "repository": {
    "type": "git",
    "url": "https://github.com/vidhyutrabari/syncr.git"
  },

  "bugs": {
    "url": "https://github.com/vidhyutrabari/syncr/issues"
  },

  "homepage": "https://github.com/vidhyutrabari/syncr#readme"
}
